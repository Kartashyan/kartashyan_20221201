datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Video {
  id           String       @id @default(cuid())
  title        String
  thumbnail    String
  categoryName CategoryName
  category     Category     @relation(references: [name], fields: [categoryName])
}

model Category {
  name   CategoryName @id @default(Exercise)
  videos Video[]
}

enum CategoryName {
  Exercise
  Education
  Recipe
}
