datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Video {
  id        String @id @default(cuid())
  title     String
  thumbnail String
  category  String
}

model Category {
  name  CategoryName @id @default(Exercise)
}

enum CategoryName {
  Exercise
  Education
  Recipe
}
